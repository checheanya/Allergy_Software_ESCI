@startuml
start
:User opens app;
:App shows login screen;
:User selects "Sign Up with Email";
:App displays email sign-up form;
:User fills out the form;
:App validates the name;
if (Name is valid) then (yes)
  :App validates the email;
  if (Email is valid) then (yes)
    :App creates a new user account;
    :App logs in the user;
    :App shows home screen;
  else (no)
    :App displays error message "Invalid Email";
  end
endif
else (no)
  :App displays error message "Invalid Name";
end
@enduml
